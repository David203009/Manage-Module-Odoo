<odoo>
    <data>

        <!-- defaul view sprint tree -->

         <record model="ir.ui.view" id="manage.sprint_list">
            <field name="name">Manage Sprint List</field>
            <field name="model">manage.sprint</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="task"/>
                </tree>
            </field>
        </record>

        <!-- default view sprint form -->

        <record id="manage.sprint_form" model="ir.ui.view">
            <field name="name">Manage Sprint Form</field>
            <field name="model">manage.sprint</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                            </group>
                            <group>
                                <field name="description" />
                            </group>
                            <group>
                                <field name="start_date" />
                                <field name="end_date" />
                            </group>
                            <group></group>
                            <group >
                                <field name="task" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


    </data>

</odoo>