<odoo>
    <data>

        <!-- defaul view sprint tree -->

         <record model="ir.ui.view" id="manage.technology_list">
            <field name="name">Manage technology List</field>
            <field name="model">manage.technology</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="task"/>
                    <field name="photo"/>
                </tree>
            </field>
        </record>

        <!-- default view sprint form -->

        <record id="manage.technology_form" model="ir.ui.view">
            <field name="name">Manage technology Form</field>
            <field name="model">manage.technology</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                            </group>
                            <group>
                                <field name="description" />
                            </group>
                            <group>
                                <field name="photo" />
                            </group>
                            <group></group>
                            <group>
                                <field name="task" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


    </data>

</odoo>
